{
  "dependencies": {
    "bootstrap": "^4.3.1",
    "core-js": "^3.0.0",
    "jquery": "^3.3.1",
    "popper.js": "^1.14.7"
  },
  "devDependencies": {
    "@babel/core": "^7.4.0",
    "@babel/preset-env": "^7.4.1",
    "babel-loader": "^8.0.5",
    "html-webpack-plugin": "^3.2.0",
    "htmlhint": "^0.11.0",
    "http-server": "^0.11.1",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.5",
    "node-sass": "^4.11.0",
    "prettier": "1.16.4",
    "rimraf": "^2.6.3",
    "stylelint": "^9.10.1",
    "stylelint-config-recommended": "^2.1.0",
    "webpack": "^4.29.6",
    "webpack-cli": "^3.3.0",
    "webpack-dev-server": "^3.2.1"
  },
  "scripts": {
    "clean": "rimraf dist",
    "serve": "hs dist -p 8000",
    "serve:dev": "webpack-dev-server --mode development",
    "lint:html": "htmlhint src/**/*.html",
    "lint:scss": "stylelint src/**/*.scss",
    "format": "prettier src/**/*.{html,css,scss,js,ts} --write",
    "build:scss": "node-sass --output src/css src/scss",
    "watch:scss": "node-sass --watch --output src/css src/scss",
    "build:dev": "npm run clean && webpack --mode development",
    "build:prod": "npm run clean && webpack --mode production"
  },
  "husky": {
    "hooks": {
      "post-checkout": "npm i",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.html": [
      "htmlhint",
      "prettier --write",
      "git add"
    ],
    "*.{css,scss}": [
      "stylelint",
      "prettier --write",
      "git add"
    ],
    "*.{js,ts}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "printWidth": 120
  }
}
