{
  "dependencies": {
    "bootstrap": "^4.3.1",
    "jquery": "^3.3.1",
    "popper.js": "^1.14.7"
  },
  "devDependencies": {
    "htmlhint": "^0.11.0",
    "http-server": "^0.11.1",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.5",
    "live-server": "^1.2.1",
    "node-sass": "^4.11.0",
    "prettier": "1.16.4",
    "stylelint": "^9.10.1",
    "stylelint-config-recommended": "^2.1.0"
  },
  "scripts": {
    "serve": "hs src -p 8000",
    "serve:dev": "live-server src --mount=/node_modules:node_modules",
    "lint:html": "htmlhint src/**/*.html",
    "lint:scss": "stylelint src/**/*.scss",
    "format": "prettier src/**/*.{html,css,scss,js,ts} --write",
    "build:scss": "node-sass --output src/css src/scss/app.scss",
    "watch:scss": "node-sass --watch --output src/css src/scss/app.scss"
  },
  "husky": {
    "hooks": {
      "post-checkout": "npm i",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{html,css,scss,js,ts}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "printWidth": 120
  }
}
